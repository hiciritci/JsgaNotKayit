@model NotKayit.Models.ViewModels.OgrenciAdresTmlViewModel

@{
    ViewData["Title"] = "Adresler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">

        <!-- Adres Listesi -->
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-map-marked-alt mr-2"></i> Adresler
                </h3>
                <div class="card-tools">
                    <a asp-controller="Ogrenci" asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Öğrenci Listesi
                    </a>
                </div>
            </div>

            <div class="card-body">
                @if (Model.AdresListesi == null || !Model.AdresListesi.Any())
                {
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle mr-1"></i> Bu öğrenciye ait kayıtlı adres yok.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Adres</th>
                                    <th style="width:120px;" class="text-right">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model.AdresListesi)
                                {
                                    <tr>
                                        <td>@a.Adres</td>
                                        <td class="text-right">
                                            <form asp-action="AdresDelete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="ogrenciAdresId" value="@a.Id" />
                                                <input type="hidden" name="ogrenciId" value="@Model.OgrenciTmlId" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Bu adresi silmek istediğinize emin misiniz?');">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <!-- Yeni Adres Ekle -->
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus mr-2"></i> Yeni Adres Ekle
                </h3>
            </div>

            <form asp-action="AdresCreate" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OgrenciTmlId" />

                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Adres"></label>
                        <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Adres bilgisini girin..."></textarea>
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>

                    <a class="btn btn-secondary"
                       asp-controller="Ogrenci"
                       asp-action="Index">
                        <i class="fas fa-times"></i> Vazgeç
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}