@model NotKayit.Models.ViewModels.OgrenciTmlViewModel

@{
    ViewData["Title"] = "Öğrenci Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="bi bi-person-badge"></i> @ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Adı</dt>
            <dd class="col-sm-9">@Model.Ad</dd>

            <dt class="col-sm-3">Soyadı</dt>
            <dd class="col-sm-9">@Model.Soyad</dd>

            <dt class="col-sm-3">Doğum Tarihi</dt>
            <dd class="col-sm-9">@Model.DogumTarihi.ToString("dd.MM.yyyy")</dd>

        @*     <dt class="col-sm-3">E‑Posta</dt>
            <dd class="col-sm-9"><a href="mailto:@Model.Email">@Model.Email</a></dd>

            <dt class="col-sm-3">Kayıt Tarihi</dt>
            <dd class="col-sm-9">@Model.KayitTarihi?.ToString("dd.MM.yyyy HH:mm")</dd> *@
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
} 