@model NotKayit.Models.ViewModels.OgrenciTmlViewModel

@{
    ViewData["Title"] = "Öğrenci Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8 col-12">

        <div class="card card-warning card-outline">
            <div class="card-header py-2">
                <h3 class="card-title mb-0">
                    <i class="fas fa-edit mr-2"></i> @ViewData["Title"]
                </h3>
            </div>

            <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="card-body py-3">

                    <div class="form-group mb-3">
                        <label asp-for="Ad" class="mb-1"></label>
                        <input asp-for="Ad" class="form-control form-control-sm" />
                        <span asp-validation-for="Ad" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Soyad" class="mb-1"></label>
                        <input asp-for="Soyad" class="form-control form-control-sm" />
                        <span asp-validation-for="Soyad" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="DogumTarihi" class="mb-1"></label>
                        <input asp-for="DogumTarihi" type="date" class="form-control form-control-sm" />
                        <span asp-validation-for="DogumTarihi" class="text-danger small"></span>
                    </div>

                </div>

                <div class="card-footer text-right py-2">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Güncelle
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-sm ml-1">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}