@model IEnumerable<NotKayit.Models.ViewModels.OgrenciTmlViewModel>

@{
    ViewData["Title"] = "Öğrenci Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="bi bi-people"></i> @ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Doğum Tarihi</th> 
                <th></th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        Kayıtlı öğrenci bulunamadı. <a asp-action="Create">Yeni ekleyin.</a>
                    </td>
                </tr>
            }
            else
            {
                int i = 1;
                foreach (var ogrenci in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@ogrenci.Ad</td>
                        <td>@ogrenci.Soyad</td>
                        <td>@ogrenci.DogumTarihi.ToString("dd.MM.yyyy")</td>
                        <td>YAS HESAPLANIP BU ALANA @ogrenci.Yas</td>
                     
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@ogrenci.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-eye"></i> Görüntüle
                            </a>
                            <a asp-action="Edit" asp-route-id="@ogrenci.Id" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@ogrenci.Id"
                               class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
}