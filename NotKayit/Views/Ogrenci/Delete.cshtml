@model NotKayit.Models.ViewModels.OgrenciTmlViewModel

@{
    ViewData["Title"] = "Öğrenci Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-7 col-md-9 col-12">

        <div class="card card-danger card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-trash mr-2"></i> @ViewData["Title"]
                </h3>
            </div>

            <div class="card-body">
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-exclamation-triangle mr-1"></i>
                    <strong>@Model.Ad @Model.Soyad</strong> isimli öğrenci kaydını silmek istediğinize emin misiniz?
                </div>
            </div>

            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.Id" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-check"></i> Evet, Sil
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-secondary ml-2">
                    <i class="fas fa-times"></i> Hayır, Vazgeç
                </a>
            </div>
        </div>

    </div>
</div>