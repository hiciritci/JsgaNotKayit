@model NotKayit.Models.ViewModels.OgrenciTmlViewModel

@{
    ViewData["Title"] = "Öğrenci Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash"></i> @ViewData["Title"]</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <div>
        <strong>@Model.Ad @Model.Soyad</strong> isimli öğrenci kaydını silmek istediğinize emin misiniz?
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-check-lg"></i> Evet, Sil
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-x-lg"></i> Hayır, Vazgeç
    </a>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
}